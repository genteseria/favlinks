<link rel="stylesheet" href="css/index.css">
<link rel="stylesheet" href="css/styles.css">

<div class="container p-4 subheader">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card" style="margin-top: 20vh;">
                <div class="card-body">
                    <form action="/links/edit/{{links.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{links.titulo}}" class="form-control" name="titulo" placeholder="Título" maxlength="200" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{links.url}}" class="form-control" name="url" placeholder="URL" maxlength="1000">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Descripción" maxlength="800">{{links.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Editar link</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>